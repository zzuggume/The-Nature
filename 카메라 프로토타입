import tensorflow.keras
import cv2
import time

#웹캠에서 영상을 읽어온다
cap = cv2.VideoCapture(0)
cap.set(3, 640) #WIDTH
cap.set(4, 480) #HEIGHT

model = tensorflow.keras.models.load_model('turtleai.h5')

while(True):
    # frame 별로 capture 한다
    ret, frame = cap.read()

    frame = cv2.flip(frame, 1)

    #화면에 출력한다
    if(ret) :
       gray = cv2.cvtColor(frame,  cv2.COLOR_BGR2GRAY)    # 입력 받은 화면 Gray로 변환

    cv2.imshow('frame_color', frame)
    if cv2.waitKey(1) == ord('q'):
        break

cap.release()
cv2.destroyAllWindows()
